<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/emptyAvatar"
        android:layout_marginTop="20dp"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/detail_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="10dp"
        android:textColor="#FAFA"
        android:text=""></TextView>

    <RelativeLayout
        android:id="@+id/relative_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="290dp"
            android:text="Name"
            android:textSize="24sp"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editName"
            android:layout_below="@+id/nameProfile"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/phoneProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="390dp"
            android:text="Phone"
            android:textSize="24sp"></TextView>
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/phoneProfile"
            ></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/countryProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="490dp"
            android:text="Country"
            android:textSize="24sp"></TextView>
        <EditText
            android:id="@+id/editCountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/countryProfile"></EditText>
    </RelativeLayout>
<TextView
    android:id="@+id/ProfileBody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></TextView>
    <TextView
    android:id="@+id/ProfileImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    ></TextView>
</RelativeLayout>